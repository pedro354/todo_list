<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <link rel="stylesheet" href="/css/app.css">
    
    <title>Lista de Tarefas | To-Do App</title>
</head>

<body class="app">
    <%- include('../partials/header') %>
    <main class="container-app">
        <% if (message) { %>
            <div id="toast" class="toast msg <%= message.type %>">
                <p><%= message.text %></p>
            </div>
            <% } %>
            <div class="user">
                <% if (!user.guest) { %>
                    <span>Bem vindo, <%= user.username || user.name  %></span>
                    <% } else { %>
                        <span>Ol√°, Convidado!</span>
                        <% } %>
                        <form action="/auth/delete" method="POST" onsubmit="return confirm('Tem certeza que deseja deletar sua conta?')">
                            <button class="deleteBtn" type="submit">Deletar Conta</button>
                        </form>
                    </div>
                    
                    <h1 class="text">Lista de Tarefas</h1>
                    <div class="mt-5" id="sectionTasks">
                    <ul class="list-group" id="taskContainer">
                        <% tasks.forEach( task => { %>
                            <li class="list-group-item">
                                <article class="task">
                                    <a class="task-title" href="/app/<%= task.id  %>">
                                        <h2 class="text">
                                            <%= task.title %>
                                        </h2>
                                    </a>
                                </article>
                                <form id="deleteTask" action="/app/<%= task.id  %>" method="post">
                                    <button class="deleteBtn" id="deleteBtn">X</button>
                                </form>
                            </li>
                <% }) %>
                
            </ul>
            <div id="empty-container" style="display: none;" class="empty-msg"></div>
            <button class="btn-normal">
                        <a class="btn-new-task" href="/app/create">Criar Nova Lista de Tarefas</a>
                    </button>
                </div>  
        </main>
        <script type="module" src="script/app.js" defer >
            
        </script>
        
        <%- include('../partials/footer') %>

</body>

</html>

