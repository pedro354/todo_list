<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
     <link rel="stylesheet" href="/css/app.css">

<title>Lista de Tarefas | To-Do App</title>
</head>

<body>
    <%- include('../partials/header') %>
        <main class="app">
            <div class="user">
                <span>Bem vindo! ${Convidado}</span>
            </div>
            <div class="container-app mt-5" id="sectionTasks">
                <h1>Lista de Tarefas</h1>
                    <ul class="list-group" id="taskContainer">
                        <% tasks.forEach( task => { %>
                            <li class="list-group-item">
                                <article class="task">
                                    <a class="task-title" href="/app/<%= task.id  %>">
                                        <h2>
                                            <%= task.title %>
                                        </h2>
                                    </a>
                                </article>
                                <form id="deleteTask" action="/app/<%= task.id  %>/delete" method="post">
                                    <button class="deleteBtn" id="btnId">X</button>
                                </form>
                            </li>
                <% }) %>
            </ul>
                    <span id="empty" class="empty-message" style="display: none;">🔍 Lista de tarefas vazia!</span>
                    <button class="btn-normal">
                        <a class="btn-new-task" href="/app/create">Criar Nova Lista de Tarefas</a>
                    </button>
                </div>   
        </main>
        <%- include('../partials/footer') %>
</body>

</html>

