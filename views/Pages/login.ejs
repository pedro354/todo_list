<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do App | Login</title>
  <link rel="stylesheet" href="/css/app.css">
</head>

<body class="login-body">

    <div class="login-container">
      <div class="login-card">
        <h2>Login</h2>
            <% if (locals.loginError) { %>
            <div class="error">
              <%= loginError %>
            </div>
            <% } %>

            <% if (locals.loginSuccess) { %>
            <div class="success">
            <%= loginSuccess %>
            </div>
            <% } %>

      <div class="login-form">
<% if (message) { %>
  <div class="message <%= message.type %>">
    <p><%= message.text %></p>
  </div>
<% } %>
                    <form action="/auth/login" method="POST">
                      <label for="email">Email</label>
                      <input type="email" name="email" id="email" required>

                      <label for="password">Senha</label>
                      <input type="password" name="password" id="password" required>

                      <div class="actions">
                        <div class="middle-actions">
                          <a href="/auth/register">Registrar-se</a>
                          <span>/</span>
                          <a href="">Esqueceu a senha?</a>

                        </div>
                        <button class="btn-login" type="submit" name="loginType" value="user">Entrar</button>
                        <button class="btn-guest" type="submit" name="loginType" value="guest">Login como convidado</button>

                      </div>
                    </form>
      </div>
    </div>
            <script type="module" src="/script/app.js"></script>

    <%- include('../partials/footer') %>

</body>

</html>